generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  photo    String?
  location String?
  email    String?
  groups   Group[]
}

model Group {
  id       Int    @id @default(autoincrement())
  name     String
  img      String?
  members  User[]
  messages String[]
}